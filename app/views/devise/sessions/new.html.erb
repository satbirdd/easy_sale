<%= javascript_include_tag 'login/index' %>

<script type='text/x-handlebars'>
	<h2>Sign in</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div>
	  	<%= f.label :email %><br />
	    {{input autofocus="autofocus" id="user_email" action="checkEnter" 
	      value=email name="user[email]" type="email"}}
			<span>
				{{#if emailErr}}
				  email formate error!
				{{/if}}
			</span>
	    
	  </div>

	  <div>
	  	<%= f.label :password %><br />
	  	{{input autocomplete="off" id="user_password" action="checkEnter" 
	  	  value=password name="user[password]" type="password"}}
			{{#if passwordErr}}
			  password formate error!
			{{/if}}
	   </div>

	  <% if devise_mapping.rememberable? -%>
	    <div>
	    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
	   	</div>
	  <% end -%>

	  <div>
	  	<input {{action checkEnter}} name="commit" type="submit" value="Sign in">
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</script>