<script type="text/javascript">
	window.MetaData = {
		isAuthed: <%= "#{!current_user.blank?}" %>,
		email: <%= current_user ? current_user.email : "null" %>
	}
</script>
<script type="text/x-handlebars">
  {{#if currentUser}}
  	{{currentUser.email}}
  {{else}}
  	signin || login
  {{/if}}
	{{#link-to 'login'}}
		login
	{{/link-to}}

	{{outlet}}
</script>
<script type="text/x-handlebars" data-template-name="login">
	<form>
		<label for="email">Email:
			<input type="text" id="email" name="email" placeholder="input you email here">
		</lable>
		<label>Password:
			<input type="text" id="password" name="password" placeholder="input you email here">
		</label>
		<div>
			Do not have a account yet?
			<button>Register</button>
		</div>
	</form>
</script>